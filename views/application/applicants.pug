extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Your Applicants
    
    .row
        .col-xs-12
            ul
                each a in applicants
                    li
                        form.form(action="/application/verify?userId=" + a.id, method="POST")
                            span= a
                            button.btn.btn-success Accept