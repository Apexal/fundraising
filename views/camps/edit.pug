extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Edit 
                    b Camp #{camp.location.name}
    .row
        .col-xs-12
            form.form(method="POST")
                .form-group
                    label(for="edit-camp-location") Location
                    select.form-control#edit-camp-location(name="locationId")
                        each l in openLocations
                            option(value=l._id, selected=l._id==camp.location._id) #{l.name} (#{l.address})
                .form-group
                    label(for="edit-camp-start") Start Date
                        span.text-muted  (was #{moment(camp.startDate).format("MM/DD/YY")})
                    input.form-control#edit-camp-start(type="date", min=moment().format("YYYY-MM-DD"), max=moment().add(1, "years").format("YYYY-MM-DD"), name="startDate", required)

                    label(for="edit-camp-end") End Date
                        span.text-muted  (was #{moment(camp.endDate).format("MM/DD/YY")})
                    input.form-control#edit-camp-end(value=camp.endDate, type="date", min=moment().format("YYYY-MM-DD"), max=moment().add(1, "years").format("YYYY-MM-DD"), name="endDate", required)

                .form-group
                    label(for="edit-camp-info") Camp Info
                        small.text-muted  (Optional)
                    textarea.form-control#edit-camp-description(name="info", placeholder="Add any important information here.", rows="5")= camp.info
                button.btn.btn-primary Save Camp