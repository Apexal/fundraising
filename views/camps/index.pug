extends /layout

block content
    .row
        .col-xs-12
            .jumbotron.clearfix
                h1 Camps
                    small.right #{camps.length} total
                p= helpers.getHelpInfo('camps')
                a.btn.btn-primary.right(href="#camps") All Camps
            hr

    .row
        .col-xs-12
            .page-header
                h1 Active Camps
                    +help('active-camps')
                    small.right #{activeCamps.length} total
    
        if activeCamps.length > 0
            each c in activeCamps
                .col-xs-12.col-md-6.col-lg-4
                    +camp-panel(c)
        else
            p.text-muted.text-center There are currently no #[b active camps].
    .row#camps
        .col-xs-12
            .page-header
                h2 Inactive Camps
                    +help('inactive-camps')
                    small.right #{inactiveCamps.length} total
        .col-xs-12
            if inactiveCamps.length > 0
                table.table.table-striped
                    thead
                        tr
                            th End Date
                            th Camp Location
                            th Ambassador
                            th Program Director
                    tbody
                        each c in inactiveCamps
                            tr
                                th(title=moment(c.endDate).fromNow())= moment(c.endDate).format("MMMM Do YYYY")
                                td(title=c.location.address)
                                    a(href='/locations/' + c.location._id)= c.location.name

                                if c.ambassador
                                    td
                                        a(href='/users/' + c.ambassador.email)= c.ambassador.name.full
                                else
                                    td.text-muted None
                                
                                if c.director
                                    td
                                        a(href='/users/' + c.director.email)= c.director.name.full
                                else
                                    td.text-muted None
                                
                                td
                                    a.btn.btn-default(href="/camps/" + c._id) Camp Overview
            else
                p.text-muted.text-center There are no #[b inactive camps].
        
    .row
        .col-xs-12
            hr
            if user.admin
                a.btn.btn-success(href='/camps/schedule') Schedule New Camp