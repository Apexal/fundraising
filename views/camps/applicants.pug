extends /layout

mixin applicant(u)
    .col-xs-12.col-sm-6
        .panel.panel-default
            .panel-heading
                h1.panel-title= u.name.full
                    span.text-muted.right(title=moment(u.registeredDate).format("dddd, MMMM Do YYYY, h:mm a"))= moment(u.registeredDate).fromNow()
            .panel-body
                form.form(method="POST", action="/camps/" + camp.id + "/verify/" + u.email)
                    p.text-muted.text-center #[b= u.age] years old in grade #[b= u.grade] near #[b= u.location]
                        br
                        a(href="mailto:" + u.email)= u.email
                        hr
                    b Applying for
                        select.form-control(name="role")
                            option(value="teacher", selected=(u.application.role == 'teacher')) Teacher
                            option(value="director", selected=(u.application.role == 'director')) Program Director
                    hr
                    blockquote
                        p= u.application.why
                        footer Why Kids Tales?
                    hr
                    if u.application.writingFileName
                        a(href='/writingsamples/' + u.application.writingFileName, target='new')
                            +icon('link', 'Writing Sample')
                    else
                        p.text-muted.text-center No writing sample uploaded yet.
                    hr

                    button.btn.btn-success.right Accept
                    button.btn.btn-danger Delete
block content
    .row
        .col-xs-12
            .page-header
                h1 Camp Applicants
                    +help('applicants')
                    small.right #{camp.applicants.length} total
        .col-xs-12
            if camp.applicants.length > 0
                each a in camp.applicants
                    +applicant(a)
            else
                p.text-muted.text-center There are currently no pending applicants.
    .row
        .col-xs-12
            hr
            a.btn.btn-primary(href='/camps/' + camp._id) Camp Overview