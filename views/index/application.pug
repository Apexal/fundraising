extends /layout

block content
    .row
        .col-xs-12
            .jumbotron
                h1 Kids Tales Teacher Application
                p= helpers.getHelpInfo('application')
        
        .col-xs-12
            form.application-form(method="POST", enctype="multipart/form-data")
                .page-header
                    h3 Contact Info
                include /includes/userForm
                
                .page-header
                    h3 Camp Info
                .form-group
                    label(for="rank") Desired Rank
                        +help('ranks')
                    select#rank.form-control(name="rank", required)
                        option(value='none') Choose Rank
                        option(value="teacher", selected=(user.application.rank == 'teacher')) Teacher
                        option(value="director", selected=(user.application.rank == 'director')) Program Director
                
                .form-group(class=(user.application.rank ? '' : 'no-rank'))
                    label(for='superior') Superior
                        +help('superior')
                    select#directors.form-control(name="directorId", required)
                        each d in directors
                            option(value=d._id)= d.name.full
                    select#ambassadors.form-control(name="ambassadorId", required)
                        each a in ambassadors
                            option(value=a._id)= a.name.full

                .form-group
                    label(for="why") Why Kids Tales?
                    textarea#why.form-control(name="why", rows="5", placeholder="What makes you eager to volunteer for us?", maxlength="650", required)= user.application.why

                .form-group
                    label(for="writing-sample") Sample of Your Writing
                    if user.application.writingFileName
                        span.text-muted  Already uploaded.
                    input.form-control#writing-sample(type="file", name="writingSample", accept=".doc,.docx,.txt,.md")

                button.btn.btn-danger(type="submit") Save
                script(src='/javascripts/application.js')