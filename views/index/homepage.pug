.row
    .col-xs-12
        .jumbotron
            h1 Welcome, #{user.name.first}!
            hr
            blockquote
                script(src="https://www.brainyquote.com/link/quotebr.js")
            
.row
    .col-xs-12
        .page-header
            h2 Active Involvements
.row
    each i in activeInvolvements
        .col-xs-12.col-lg-6
            .panel.panel-danger
                .panel-heading
                    h1.panel-title Camp 
                        b= i.camp.location.name
                .panel-body
                    .rank-desc
                        h3 You are 
                            b.rank= helpers.getRankFromCamp(i.camp, user)
                    hr
                    a.btn.btn-danger.right(href="/camps/" + i.camp._id) View Details
                    b Ending #{moment(i.camp.endDate).fromNow()}
