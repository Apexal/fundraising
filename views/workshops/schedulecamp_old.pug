.panel.panel-success
    .panel-heading
        h1.panel-title Schedule Workshop
    .panel-body
        form.from.schedule-workshop-form(action="/workshops/schedule", method="POST")
            .form-group
                label(for="schedule-workshop-location") Location
                select.form-control#schedule-workshop-location(name="locationId")
                    each l in openLocations
                        option(value=l._id) #{l.name} (#{l.address})
            .form-group
                label(for="schedule-workshop-start") Start Date
                input.form-control#schedule-workshop-start(type="date", min=moment().format("YYYY-MM-DD"), max=moment().add(1, "years").format("YYYY-MM-DD"), name="startDate", required)

                label(for="schedule-workshop-end") End Date
                input.form-control#schedule-workshop-end(type="date", min=moment().format("YYYY-MM-DD"), max=moment().add(1, "years").format("YYYY-MM-DD"), name="endDate", required)
                
            .form-group
                label(for="schedule-workshop-info") Workshop Info
                    small.text-muted  (Optional)
                textarea.form-control#schedule-workshop-description(name="info", placeholder="Add any important information here.", maxlength="650", rows="5")
            
            hr
            button.btn.btn-success.right Schedule Workshop