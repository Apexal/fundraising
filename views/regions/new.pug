extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 New Region

    .row
        .col-xs-12
            form.form(action="/regions/new", method="POST")
                .form-group
                    label(for="new-region-name") Region Name
                    input#new-region-name.form-control(type="text", name="name", placeholder="Name of region", required)
                .form-group
                    label(for="new-region-description") Description
                    textarea#new-region-description.form-control(placeholder="Description of region...", rows="2")
                button.btn.btn-primary(type="submit") Add