extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Ambassador Setup
    .row
        .col-xs-12
            form.form(method="POST")
                .form-group
                    label(for="phone-number") Personal Phone Number
                    input#phone-number.form-control(name="phoneNumber", type="text", placeholder="Enter phone number", required)
                
                .form-group
                    label(for="locations-select") Locations
                    br
                    if locationsNoAmbassador.length == 0
                        span.text-muted There are no locations currently missing Ambassadors. 
                    else
                        each l in locationsNoAmbassador
                            span.location
                                input(type="checkbox", name="locationIds", value=l._id)
                                span(title=(l.director ? 'Directed by ' + l.director.name.full : ''))  #{l.name}
                                    span.text-muted  [#{l.address}]
                        span.location
                            input(type="checkbox", name="locationIds", value=124324)
                hr
                button.btn.btn-default(type="submit") Submit