extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Teacher Setup
    .row
        .col-xs-12
            form.form(method="POST")
                .form-group
                    label(for="phone-number") Personal Phone Number
                    input#phone-number.form-control(name="phoneNumber", type="text", placeholder="Enter phone number", required)
                .form-group
                    label(for="location-select") Location
                    if locations.length == 0
                        p.text-muted No open locations.
                    else
                        select.form-control#location-select(name="locationId")
                            for l in locations
                                option(value=l._id) #{l.name}
                button.btn.btn-default(type="submit") Submit