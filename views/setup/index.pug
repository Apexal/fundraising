extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Account Setup
    .row
        .col-xs-12
            form.form-inline(method="POST", action="/setup/profilepicture", enctype="multipart/form-data")
                label(for="profile-img-picker") Profile Picture
                br
                input.form-control#profile-img-picker(type="file", name="profileImage", accept="image/*")
                button.btn.btn-danger Upload
                hr

            form.form(method="POST")
                .form-group
                    label Email
                    input.form-control.disabled(type="text", value=user.email, disabled)
                .form-group
                    label(for="first-name") First Name
                    input.form-control#first-name(name="firstName", type="text", maxlength="20", value=user.name.first, required)
                .form-group
                    label(for="last-name") Last Name
                    input.form-control#last-name(name="lastName", type="text", maxlength="20", value=user.name.last, required)
                .form-group
                    label(for="phone-number") Personal Phone Number
                    input#phone-number.form-control(name="phoneNumber", type="text", maxlength="20", placeholder="xxx-xxx-xxxx", value=user.phoneNumber, required)
                button.btn.btn-default(type="submit") Save