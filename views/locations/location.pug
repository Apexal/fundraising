extends /layout

block content
    .row
        .page-header
            h1= location.name
                small.right Running from #[b START] to #[b END]
        if location.description
            p= location.description
    
    .row
        .col-xs-12.col-lg-5
            .panel.panel-danger
                .panel-heading
                    h1.panel-title Ambassador
                .panel-body

            .panel.panel-success
                .panel-heading
                    h1.panel-title Program Director
                .panel-body

            .panel.panel-info
                .panel-heading
                    h1.panel-title Teachers
                .panel-body

        .col-xs-12.col-lg-7

            iframe(width="600", height="450", frameborder="0", style="border:0", src="https://www.google.com/maps/embed/v1/place?key=" + apiKey + "&q=" + location.address, allowfullscreen)