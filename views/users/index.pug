extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 User List
                    small.right #{users.length} total
    .row
        .col-xs-12
            .page-header
                h2 Administrators
            if administrators.length > 0
                each a in administrators
                    .col-xs-12.col-md-6.col-lg-4
                        .panel.panel-danger
                            .panel-heading
                                a.panel-title(href="/users/" + a.email) #{a.name.full}
                            .panel-body
                                .media
                                    .media-left
                                        a(href="/users/" + a.email)
                                            img(src="http://via.placeholder.com/120x150")
                                    .media-right
                                        .email
                                            b Email
                                            br
                                            a(href="mailto:" + a.email) #{a.email}
            else
                p.text-muted.text-center There are currently no #[b Administrators] registered.
    .row
        .col-xs-12
            .page-header
                h2 Ambassadors
            if ambassadors.length > 0
                each a in ambassadors
                    .col-xs-12.col-md-6.col-lg-4
                        .panel.panel-danger
                            .panel-heading
                                a.panel-title(href="/users/" + a.email) #{a.name.full}
                            .panel-body
                                .media
                                    .media-left
                                        a(href="/users/" + a.email)
                                            img(src="http://via.placeholder.com/120x150")
                                    .media-right
                                        .email
                                            b Email
                                            br
                                            a(href="mailto:" + a.email) #{a.email}
                                        .camps
                                            br
                                            b Past Camp Counts
                                            br
                                            span #{a.pastCamps.length} total
            else
                p.text-muted.text-center There are currently no #[b Ambassadors] registered.
        .col-xs-12
            hr
    .row
        .col-xs-12
            .page-header
                h2 Program Directors
            if directors.length > 0
                each d in directors
