extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 User List
                    small.right #{users.length} total

    .row#users
        each u in users
            .col-xs-12.col-md-6.col-lg-4
                .panel.panel-primary
                    .panel-heading
                        a.panel-title(href="/users/" + u.email) #{u.name.full}
                    .panel-body
                        .media
                            .media-left
                                a(href="/users/" + u.email)
                                    img.large-profile-image(alt="Image of " + u.name.first, src="/images/" + u.profileImageName)
                            .media-right
                                .email
                                    b Email
                                    br
                                    a(href="mailto:" + u.email) #{u.email}
                                .camps
                                    br
                                    b Past Camp Count
                                    br
                                    span #{u.pastCamps.length} total
    