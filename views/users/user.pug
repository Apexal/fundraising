extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 #{targetUser.name.full}
                    small.text-muted.right registered #{moment(targetUser.registeredDate).fromNow()}
    .row.user-info
        .col-xs-12.col-md-6.col-lg-3
            img.user-profile(src="/images/" + targetUser.profileImageName)
            br
            blockquote
                p= targetUser.phoneNumber
                 footer #{targetUser.name.first}'s Phone Number
          
    .row.past-camps
        .col-xs-12
            .page-header
                h2 All Camps
                    small.right #{camps.length} total
        .col-xs-12
            table.table
                    thead
                        tr
                            th Start Date
                            th End Date
                            th Location
                            th Frank's Rank
                    tbody
                        each c in camps
                            tr
                                td= moment(c.startDate).format("YYYY-MM-DD")
                                td= moment(c.endDate).format("YYYY-MM-DD")
                                td
                                    a(href="/locations/" + c.location._id)= c.location.name
                                td.rank= helpers.getRankFromCamp(c, targetUser)
                                td
                                    a.btn.btn-default(href="/camps/" + c._id) View
                                
        
    .row
        .col-xs-12
            hr
            a.btn.btn-lg.btn-primary.right(href="mailto:" + targetUser.email) Email #{targetUser.name.first}
    
            if user.admin
                if user._id != targetUser._id
                    a.btn.btn-lg.btn-info(href="/loginas?email=" + targetUser.email) Login as #{targetUser.name.first}
                a.btn.btn-lg.btn-danger(href="/users/" + targetUser.email + "/edit") Edit #{targetUser.name.first}