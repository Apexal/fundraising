extends /layout

block content
    .row
        .col-xs-12
            .page-header
                h1 Edit #{targetUser.name.full}
    .row
        .col-xs-12
            form.form(action="/users/" + targetUser.email + "/edit", method="POST")
                .form-group
                    label(for="email") Email
                    input.form-control.disabled#email(type="text", value=targetUser.email, disabled)
                .form-group
                    label(for="first-name") First Name
                    input.form-control#first-name(type="text", name="firstName", value=targetUser.name.first, maxlength="30", required)
                .form-group
                    label(for="last-name") Last Name
                    input.form-control#last-name(type="text", name="lastName", value=targetUser.name.last, maxlength="30", required)
                .form-group
                    label(for="phone-number") Phone Number
                    input.form-control#phone-number(type="text", name="phoneNumber", value=targetUser.phoneNumber, maxlength="30", required)
                .form-group
                    label(for="verified") Verified &nbsp;
                    input#verified(type="checkbox", name="verified", checked=targetUser.verified)
                .form-group
                    label(for="admin") Administrator &nbsp;
                    input#admin(type="checkbox", name="admin", checked=targetUser.admin)
                button.btn.btn-lg.btn-primary.right Save